<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.health.MainScreen">

    <!--<ImageView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/healthbck">-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Welcome Rahul"
        android:textColor="#FFFFFF"

        android:fontFamily="sans-serif-condensed"
        android:textSize="30dp"
        android:id="@+id/username_textview"
        android:paddingTop="10dp"
        android:background="@drawable/healthbck"
        android:paddingLeft="10dp"/>
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_marginTop="60dp"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available courses"
            android:fontFamily="sans-serif-condensed"

            android:textSize="20dp"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/reduce"
            android:layout_margin="5dp"

            >


            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/weight_loss_page_image"


                android:layout_height="200dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reduce 20kgs in 7 weeks"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="We instruct you to effectively reduce 20kgs in just 7 weeks with leading fitness instructor"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#000"
    android:layout_marginTop="10dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:id="@+id/hypertension"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >


            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/hyper"

                android:layout_height="200dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reduce Hypertension in 6 weeks"
                android:fontFamily="sans-serif-condensed"
                android:textSize="30dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="20dp"
                android:text="Effectively reduce Hypertension in just 6 weeks with our leading online instructors. We agree you that you can feel amazing results."
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginTop="10dp"/>

        </LinearLayout>








    </LinearLayout>




    </ScrollView>

</android.support.constraint.ConstraintLayout>
