<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.health.Hyper">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Reduce Hypertension in 6weeks"
                android:textColor="#FFFFFF"

                android:fontFamily="sans-serif-condensed"
                android:textSize="28dp"
                android:id="@+id/username_textview"
                android:paddingTop="10dp"
                android:background="@drawable/healthbck"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#222222"


                android:text="@string/hyper"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rahul">

                <RelativeLayout
                    android:id="@+id/prakash"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:foregroundGravity="left"
                        android:src="@drawable/rah"/>

                    <TextView
                        android:text="Rahul Figo"
                        android:textColor="#c5420a"
                        android:layout_marginLeft="130dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RatingBar
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="20dp"
                        android:numStars="2"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/annie"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="100dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:foregroundGravity="left"
                        android:src="@drawable/sun" />

                    <TextView
                        android:text="Sundeep Rooney"
                        android:layout_marginLeft="130dp"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:textColor="#c5420a"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />

                    <RatingBar
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:numStars="4"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="200dp"
                    android:id="@+id/telsna">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:foregroundGravity="left"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/kowsi" />

                    <TextView
                        android:text="Selena Gomez"
                        android:textSize="15dp"
                        android:textColor="#c5420a"
                        android:textStyle="bold"
                        android:layout_marginLeft="130dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"/>

                    <RatingBar
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="20dp"
                        android:numStars="3"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

            </RelativeLayout>



        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
